\&              \*(Aqoffset\*(Aq => 8
\&            }
\&          ],
\&          \*(Aqtype\*(Aq => \*(AqU32\*(Aq
\&        }
\&      ],
\&      \*(Aqsize\*(Aq => 12
\&    },
\&    {
\&      \*(Aqidentifier\*(Aq => \*(Aqxxx\*(Aq,
\&      \*(Aqalign\*(Aq => 1,
\&      \*(Aqcontext\*(Aq => \*(Aqdefinitions.c(31)\*(Aq,
\&      \*(Aqpack\*(Aq => 0,
\&      \*(Aqtype\*(Aq => \*(Aqstruct\*(Aq,
\&      \*(Aqdeclarations\*(Aq => [
