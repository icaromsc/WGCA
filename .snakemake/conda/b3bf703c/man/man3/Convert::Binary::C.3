\&              \*(Aqsize\*(Aq => 4,
\&              \*(Aqoffset\*(Aq => 4
\&            }
\&          ],
\&          \*(Aqtype\*(Aq => \*(AqU32\*(Aq
\&        },
\&        {
\&          \*(Aqdeclarators\*(Aq => [
\&            {
\&              \*(Aqdeclarator\*(Aq => \*(Aqsv_flags\*(Aq,
